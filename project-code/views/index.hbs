{{else}}
    <section id="signup" class="signup-form">
        <div class="form-div">
            <h2 class="form-title">Sign up</h2>
            <form action="./auth/signup" method="post" class="general-form">
                <div>
                    <label for="" class="form-text">Username</label>
                    <input type="text" name="username" class="form-input"/>
                </div>
                <div>
                    <label for="" class="form-text">Email</label>
                    <input type="email" name="email" class="form-input"/>
                </div>
                <div>
                    <label for="" class="form-text">Password</label>
                    <input type="password" name="password" class="form-input"/>
                </div>

                <div class="input-button-space">
                    <button type="submit" class="signup-login-button">Sign up</button>
                </div>
            </form>
            <div class="another-acc">
                <p class="form-acc-text">Already have an account? <a href="/auth/login" class="remove-style-acc">Log in</a></p>
            </div>
            {{message}}
        </div>
    </section>
{{/if}}
